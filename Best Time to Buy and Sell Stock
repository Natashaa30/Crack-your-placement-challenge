class Solution {
    public int maxProfit(int[] prices) {
        int bp = Integer.MAX_VALUE;  // buying price 
        int mp = 0;                  // maximum profit

        for(int i = 0; i < prices.length; i++){
            if( bp < prices[i]){
                int profit = prices[i] - bp; //current profit
                mp = Math.max(mp , profit);
            }
            else{
                bp = prices[i];
            }
        }
        return mp;  
    }
}
